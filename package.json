{
    "name": "transformalize",
    "displayName": "Transformalize",
    "description": "Runs Transformalize arrangements in the integrated terminal.",
    "version": "0.0.3",
    "publisher": "DaleNewman",
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
		"onCommand:extension.run",
		"onCommand:extension.schema",
		"onCommand:extension.init",
		"onCommand:extension.schedule"
	],
    "main": "./out/extension",
    "contributes": {
		"configuration": {
			"type": "object",
			"title": "Transformalize Configuration",
			"properties": {
				"tfl.path": {
					"type": "string",
					"default": "",
					"description": "The path to tfl.exe"
				}
			}
		},
		"commands": [
			{
				"command": "extension.run",
				"title": "TFL: run"
			},
			{
				"command": "extension.schema",
				"title": "TFL: schema"
			},
			{
				"command": "extension.init",
				"title": "TFL: init"
			},
			{
				"command": "extension.schedule",
				"title": "TFL: schedule"
			}
		]
	},
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
	"__metadata": {
		"id": "74198ee9-8f18-4536-8f72-2261981215cd",
		"publisherId": "f51dc914-aafe-4b03-a5d9-d1424f08b66a",
		"publisherDisplayName": "Dale Newman"
	}    
}
