{
    "name": "transformalize",
    "displayName": "Transformalize",
    "description": "Runs Transformalize arrangements in the integrated terminal.",
    "version": "0.0.4",
    "publisher": "DaleNewman",
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
		"onCommand:tfl.run",
		"onCommand:tfl.schema",
		"onCommand:tfl.init",
		"onCommand:tfl.schedule"
	],
    "main": "./out/extension",
    "contributes": {
		"configuration": {
			"type": "object",
			"title": "Transformalize Configuration",
			"properties": {
				"tfl.path": {
					"type": "string",
					"default": "",
					"description": "The path to tfl.exe"
				}
			}
		},
		"commands": [
			{
				"command": "tfl.run",
				"title": "TFL: run"
			},
			{
				"command": "tfl.schema",
				"title": "TFL: schema"
			},
			{
				"command": "tfl.init",
				"title": "TFL: init"
			},
			{
				"command": "tfl.schedule",
				"title": "TFL: schedule"
			}
		]
	},
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
	},
	"repository": {
        "type": "git",
        "url": "https://github.com/dalenewman/Transformalize.VisualStudioCode.git"
    },
    "homepage": "https://github.com/dalenewman/Transformalize.VisualStudioCode/blob/master/README.md"
}
